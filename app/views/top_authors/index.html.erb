<h1>Top Authors</h1>

<ul class="list-group">
  <% @authors_sorted_by_books.each do |author| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span class="fw-bold text-success" style="font-size: 1.2em;"><%= author["name"] %></span> 
      <span class="badge bg-warning text-dark rounded-pill" style="font-size: 1.2em;"><%= author["book_count"] %> books</span>
    </li>
  <% end %>
</ul>