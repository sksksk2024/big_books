<h1>Editing Author</h1>

<%= form_with(model: author, url: author_path(author), method: :patch, remote: true) do |form| %>
  <!-- Form fields for author attributes -->
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <!-- Add more form fields for additional attributes if needed -->

  <div class="actions">
    <%= form.submit "Update Author" %>
  </div>
<% end %>

<br/>

<div>
  <%= link_to "Show", author, class: "btn btn-secondary" %> 
  <%= link_to 'Delete', author, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %>
  <%= link_to "Back", authors_path, class: "btn btn-dark" %>
</div>