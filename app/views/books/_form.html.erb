<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">

    <%= form.text_field :book_name, class:"form-control",
    placeholder:"Book Name"  %>
  </div>

  <div class="field form-group">
    <% form.label :author_first_name, style: "display: block" %>
    <%= form.text_field :author_first_name, class:"form-control",
    placeholder:"Author First Name" %>
  </div>

  <div class="field form-group">
    <% form.label :author_last_name, style: "display: block" %>
    <%= form.text_field :author_last_name, class:"form-control",
    placeholder:"Author Last Name" %>
  </div>

  <div class="field form-group">
    <% form.label :price, style: "display: block" %>
    <%= form.number_field :price, class:"form-control",
    placeholder:"Price" %>
  </div>

  <div class="field form-group">

    <%= form.number_field :user_id, id: :book_user_id, class:"form-control",
    value:current_user.id, type: :hidden  %>
  </div>

<br/>
  <div class="actions">
    <%= form.submit class: 'btn btn-secondary' %>
  </div>
<% end %>
