<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">

    <%= form.text_field :book_name, class:"form-control",
    placeholder:"Book Name"  %>
  </div>

  <div class="field form-group">
  <% form.label :author_id, "Author", style: "display: block" %>
  <%= form.collection_select(:author_id, Author.all, :id, :full_name, { prompt: "Select Author" }, { class: "form-control" }) %>
  </div>

  <div class="field form-group">
    <% form.label :price, style: "display: block" %>
    <%= form.number_field :price, class:"form-control",
    placeholder:"Price" %>
  </div>

  <div class="field form-group">
    <% form.label :page_number, style: "display: block" %>
    <%= form.number_field :page_number, class:"form-control",
    placeholder:"Pages" %>
  </div>

  <div class="field form-group">
    <% form.label :publication_date, style: "display: block" %>
    <%= form.date_field :publication_date, class:"form-control",
    placeholder:"Published" %>
  </div>

  <div class="field form-group">

    <%= form.number_field :user_id, id: :book_user_id, class:"form-control",
    value:current_user.id, type: :hidden  %>
  </div>

<br/>
  <div class="actions">
    <%= form.submit class: 'btn btn-secondary' %>
  </div>
<% end %>
